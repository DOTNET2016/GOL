<Window x:Class="GOL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOL"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1289">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFFF3F00" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Canvas x:Name="gameBoardCanvas" HorizontalAlignment="Left" Height="600" Margin="10,10,0,0" VerticalAlignment="Top" Width="800" MouseLeftButtonDown="gameBoardCanvas_MouseLeftButtonDown">
            <Canvas.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}"/>
            </Canvas.Background>
        </Canvas>
        <Button x:Name="buttonGetNxtGen" Content="Get Next Generation" HorizontalAlignment="Left" Margin="10,630,0,0" VerticalAlignment="Top" Width="144" Height="39" Click="buttonGetNxtGen_Click"/>
        <Button x:Name="StartTimer" Content="Start Timer" HorizontalAlignment="Left" Margin="175,630,0,0" VerticalAlignment="Top" Width="144" Height="39" Click="StartTimer_Click"/>
        <Button x:Name="buttonLoadFromGenTable" Content="Load from Gen Table" HorizontalAlignment="Left" Margin="336,630,0,0" VerticalAlignment="Top" Width="144" Height="39" Click="buttonLoadFromGenTable_Click"/>
        <ComboBox x:Name="comboxBoxSavedGames" HorizontalAlignment="Left" Margin="840,58,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBoxSavedGames_SelectionChanged"/>
        <Button x:Name="buttonSaveGen" Content="Save Generation" HorizontalAlignment="Left" Margin="535,630,0,0" VerticalAlignment="Top" Width="135" Height="35" Click="buttonSaveGen_Click"/>
        <ComboBox x:Name="comboBoxGenNumber" HorizontalAlignment="Left" Margin="1005,58,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonGoBack" Content="Go back to Menu" HorizontalAlignment="Left" Margin="1134,620,0,0" VerticalAlignment="Top" Width="120" Height="49" Click="buttonGoBack_Click"/>
        <Button x:Name="buttonClearBoard" Content="Clear Board" HorizontalAlignment="Left" Margin="715,630,0,0" VerticalAlignment="Top" Width="95" Height="35" Click="buttonClearBoard_Click"/>
    </Grid>
</Window>
